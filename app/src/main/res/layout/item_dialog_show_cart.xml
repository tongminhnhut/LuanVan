<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_showCart"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenDongHo_showCart"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Ten dong ho"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtGia_showCart"
                android:text="gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/btnCount_showCart"
                app:backGroundColor="@android:color/holo_red_dark"
                app:initialNumber="1"
                app:finalNumber="20"
                android:layout_width="50dp"
                android:layout_height="30dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>