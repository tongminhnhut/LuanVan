<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/view_background_cartItem"
        android:background="@color/bgDelete"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iconDelete_cartItem"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:text="DELETE ITEM FROM CART"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iconDelete_cartItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/background_CartItem"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_cartItem"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenDongHo_cartItem"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Ten dong ho"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtGia_cartItem"
                android:text="gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/btnCount_cartItem"
                app:backGroundColor="@android:color/holo_red_dark"
                app:initialNumber="1"
                app:finalNumber="20"
                android:layout_width="50dp"
                android:layout_height="30dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>